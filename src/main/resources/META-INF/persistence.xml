<?xml version="1.0" encoding="utf-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="kickvinwl">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>de.mankianer.kickwinvl.entities.User</class>
        <class>de.mankianer.kickwinvl.entities.Group</class>

        <class>de.mankianer.kickwinvl.entities.Achievement</class>

        <class>de.mankianer.kickwinvl.entities.Match</class>
        <class>de.mankianer.kickwinvl.entities.MatchTip</class>

        <class>de.mankianer.kickwinvl.entities.Team</class>
        <class>de.mankianer.kickwinvl.entities.League</class>
        <class>de.mankianer.kickwinvl.entities.Matchday</class>
        <class>de.mankianer.kickwinvl.entities.BundesligaTable</class>

        <class>de.mankianer.kickwinvl.entities.Matchday</class>
        <class>de.mankianer.kickwinvl.entities.League</class>
        <class>de.mankianer.kickwinvl.entities.NewsfeedMessage</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/kickvinwl"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>